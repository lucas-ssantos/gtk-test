{
  "app-id": "org.lucasssantos.GTKTest",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "main.js",
  "modules": [
    {
      "name": "GTKTest",
      "buildsystem": "simple",
      "build-commands": [
        "install -D src/main.js /app/bin/main.js",
        "install -D data/gtktest.desktop /app/share/applications/gtktest.desktop",
        "install -D data/gtktest.svg /app/share/icons/hicolor/scalable/apps/gtktest.svg"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
