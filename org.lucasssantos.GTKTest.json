{
  "app-id": "org.lucasssantos.GTKTest",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "main.js",
  "finish-args": [
    "--share=network",
    "--filesystem=home",
    "--socket=wayland",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "GTKTest",
      "buildsystem": "simple",
      "build-commands": [
        "install -D src/main.js /app/bin/main.js",
        "install -D data/org.lucasssantos.GTKTest.desktop /app/share/applications/org.lucasssantos.GTKTest.desktop",
        "install -D data/org.lucasssantos.GTKTest.svg /app/share/icons/hicolor/scalable/apps/org.lucasssantos.GTKTest.svg"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
